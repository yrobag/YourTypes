{% extends 'base.html.twig' %}

{% block body %}
    <h1>Game</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Team1</th>
                <td>{{ game.team1 }}</td>
            </tr>
            <tr>
                <th>Team2</th>
                <td>{{ game.team2 }}</td>
            </tr>
            <tr>
                <th>Pointsteam1</th>
                <td>{{ game.pointsTeam1 }}</td>
            </tr>
            <tr>
                <th>Pointsteam2</th>
                <td>{{ game.pointsTeam2 }}</td>
            </tr>
            <tr>
                <th>Data</th>
                <td>{% if game.data %}{{ game.data|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('app_game_showall') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('app_game_setresult', { 'id': game.id }) }}">Set result</a>
        </li>
        <li>
            <a href="{{ path('game_edit', { 'id': game.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
