{% extends 'base.html.twig' %}

{% block body %}
    <h3>Games list</h3>

    <table table class="table-condensed" style="text-align: center">

        <tbody>
        {% for form in forms %}
             <tr>

                <td style="width: 20%">{% if form.game.data %}{{ form.game.data|date('d.m.y H:i') }}{% endif %}</td>
                <td style="text-align: right">
                    <a  class="toEdit" href="{{ path('game_edit', { 'id': form.game.id }) }}">
                        {{ form.game.team1 }}</a>
                </td>

                <td style="width: 100px">
                    {{ form_start(form.form) }}
                    {{ form_widget(form.form.pointsTeam1, { 'attr': {'style': 'width: 35px; text-align: center;  color: black;'}}) }}
                    {{ form_widget(form.form.pointsTeam2, { 'attr': {'style': 'width: 35px; text-align: center;  color: black;'}}) }}
                </td>
                <td style="text-align: left">
                    <a  class="toEdit" href="{{ path('game_edit', { 'id': form.game.id }) }}">
                        {{ form.game.team2 }}</a>
                </td>

                <td>

                    <input value="Set" type="submit" style="color: black">
                    {{ form_end(form.form) }}

                </td>
            </tr></a>
        {% endfor %}


        </tbody>
    </table>
    {% if page.currentPage != page.pageCount and page.currentPage == 1 %}
        <a href="{{ path('app_game_showprevious', {'page': page.currentPage+1}) }}">Next</a>
    {% elseif page.currentPage == page.pageCount and page.currentPage != 1 %}
        <a href="{{ path('app_game_showprevious', {'page': page.currentPage-1}) }}">Previous</a>
    {% elseif page.currentPage != page.pageCount and page.currentPage != 1 %}
        <a href="{{ path('app_game_showprevious', {'page': page.currentPage-1}) }}">Previous</a>
        <a href="{{ path('app_game_showprevious', {'page': page.currentPage+1}) }}">Next</a>
    {% endif %}

{% endblock %}
