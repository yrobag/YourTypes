{% extends 'base.html.twig' %}

{% block body %}
    <h1>Games list</h1>

    <table>
        <thead>
        <tr>
            <th>Data</th>
            <th>Team1 : Team2</th>
            <th>Pointsteam1</th>
            <th>Pointsteam2</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for form in forms %}
            <tr>
                <td>{% if form.game.data %}{{ form.game.data|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <a href="{{ path('game_edit', { 'id': form.game.id }) }}">
                        {{ form.game.team1 }} : {{ form.game.team2 }}</a></td>
                {{ form_start(form.form) }}
                <td>{{ form_widget(form.form.pointsTeam1) }}</td>
                <td>{{ form_widget(form.form.pointsTeam2) }}</td>

                <td>

                    <input value="Set" type="submit">
                    {{ form_end(form.form) }}

                </td>
            </tr>
        {% endfor %}


        </tbody>
    </table>
    {% if page.currentPage != page.pageCount and page.currentPage == 1 %}
        <a href="{{ path('app_game_showprevious', {'page': page.currentPage+1}) }}">Next</a>
    {% elseif page.currentPage == page.pageCount and page.currentPage != 1 %}
        <a href="{{ path('app_game_showprevious', {'page': page.currentPage-1}) }}">Previous</a>
    {% elseif page.currentPage != page.pageCount and page.currentPage != 1 %}
        <a href="{{ path('app_game_showprevious', {'page': page.currentPage-1}) }}">Previous</a>
        <a href="{{ path('app_game_showprevious', {'page': page.currentPage+1}) }}">Next</a>
    {% endif %}

{% endblock %}
